{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "soulver",
  "title": "Soulver",
  "description": "Soulver Integration for Raycast",
  "icon": "command-icon.png",
  "author": "kabiroberai",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Calculate",
      "description": "Calculate with Soulver",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "soulverPath",
      "title": "Path to Soulver",
      "description": "Absolute path to Soulver.app",
      "required": false,
      "type": "textfield",
      "default": "/Applications/Soulver 3.app",
      "placeholder": "/Applications/Soulver 3.app"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.43.2",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}